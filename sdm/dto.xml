<?xml version="1.0" encoding="UTF-8"?>
<dto-classes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:noNamespaceSchemaLocation="dto.xsd">

    <dto-class name="gorm-Group" ref="groups"/>

    <dto-class name="GroupEx" ref="get_groups.sql">
        <field type="int64${json} // PK" column="g_id"/>
        <field type="string${json}" column="g_name"/>
        <field type="int64${json}" column="tasks_count"/>
    </dto-class>

    <dto-class name="gorm-Task" ref="tasks"/>

    <dto-class name="gorm-TaskEx" ref="tasks">
        <field column="t_comments" type="string"/> <!-- don't fetch them for list -->
    </dto-class>

</dto-classes>
